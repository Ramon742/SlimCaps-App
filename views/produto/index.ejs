<% layout('layouts/boilerplate') -%>

<div class="container" style="margin-top: 100px;">
  <h2 class="default-color">Nossos Produtos</h2>
    <div class="row">
    <% produtos.forEach(function(produto){ %>
        <div class="card mb-3 col-lg-6 mr-3" style="max-width: 540px;">
            <div class="row no-gutters">
              <div class="col-md-5">
                <img width="100%" height="250" src="<%= produto.image %>" alt="">
              </div>
              <div class="col-md-7">
                <div class="card-body">
                  <h5 class="card-title"><a href="/produtos/<%= produto.id%>"><%= produto.nome %></a></h5>
                  <p class="card-text"><%= produto.descricao %></p>
                  <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
                  <p><strong><%= produto.preco %>$</strong></p>
                  <button class="btn btn-success">Adicionar no Carrinho</button>
                </div>
              </div>
            </div>
          </div>

    <% }) %>
    </div>
</div>
