<% layout('layouts/boilerplate') -%>

<div class="rounded" style="border: 2px solid rgba(23, 162, 184, .5); width: 80%; margin: 100px auto;" >
    <form class="text-center border border-light p-5" style="width: 400px; margin: 100px auto;" action="/login" method="POST">

        <h1 class="mb-5" style="color: #17a2b8;">Login</h1>
    
    
        <!-- Name -->
        <input type="text" name="username" id="defaultSubscriptionFormPassword" class="form-control mb-4" placeholder="Nome">
    
        <!-- Email -->
        <input type="password" name="password"  id="defaultSubscriptionFormEmail" class="form-control mb-4" placeholder="Senha">
    
        <!-- Sign in button -->
        <a href="#">Esqueceu Senha?</a>
        <button class="btn btn-info btn-block mt-3" type="submit">Entrar</button>
    
    
    </form>
</div>
